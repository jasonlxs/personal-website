/*书籍条目*/
.full_bill{
  border-top:2rpx solid #aaa;
  margin-top:50rpx;
}
.bill_item{
  display: flex;
  flex-direction: row;
  padding:30rpx;
  border-bottom: 2rpx solid #aaa;
}
.bill_item checkbox{
  margin-top:50rpx;
}
.bill_item image{
    width:200rpx;
    height:200rpx;
    padding:25rpx;
}
.bill_item .bill_main .billing{
  margin-bottom:20rpx;
  font-size: 35rpx;
  font-weight: 600;
}
.bill_item .bill_main .billing text{
  color:#00B400;
}
.bill_item .bill_main .billing input{
  display: inline-block;
  width:30%;
  border:1rpx solid #dcdcdc;
  vertical-align:middle;
}

/*付款按钮*/
.pay_bill{
  width:100%;
  display: flex;
  flex-direction: row;
  position:fixed;
  top:90%;
}
.pay_bill button{
  width:50%;
  border-radius:10rpx;
  flex-grow:2
}

